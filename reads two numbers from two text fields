function findnamed fifteen()  {
    var a = document.getElementById("one").value;
    var b = document.getElementById("two").value;
    var doTheMath = Number(a) + Number(b);

    if ( a == 15 || b == 15)  {
        alert("true");
    }
    else if (doTheMath == 15 ) {
        alert("true");
    }
    else {
        alert(a + ' + ' + b + ' = ' + doTheMath);
    }
    document.getElementById("output").innerHTML ;
}
